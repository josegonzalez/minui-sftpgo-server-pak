#!/bin/sh
bindir="$(dirname "$0")"
progdir="$(dirname "$bindir")"
cd "$progdir" || exit 1
[ -f "$progdir/debug" ] && set -x
PAK_NAME="$(basename "$progdir")"
export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$progdir/lib"

main() {
    cd "$SDCARD_PATH" || exit 1
    if [ -f "$LOGS_PATH/$PAK_NAME.service.txt" ]; then
        mv "$LOGS_PATH/$PAK_NAME.service.txt" "$LOGS_PATH/$PAK_NAME.service.txt.old"
    fi

    chmod +x "$bindir/sftpgo/sftpgo"
    if [ -f "$LOGS_PATH/$PAK_NAME.process.log" ]; then
        mv "$LOGS_PATH/$PAK_NAME.process.log" "$LOGS_PATH/$PAK_NAME.process.log.old"
    fi

    ftp_port=21
    if [ -f "$progdir/ftp-port" ]; then
        ftp_port=$(cat "$progdir/ftp-port")
    fi

    http_port=8888
    if [ -f "$progdir/http-port" ]; then
        http_port=$(cat "$progdir/http-port")
    fi

    password="minui"
    if [ -f "$progdir/password" ]; then
        password=$(cat "$progdir/password")
    fi

    ("$bindir/sftpgo/sftpgo" portable \
        --ftpd-port "$ftp_port" \
        --httpd-port "$http_port" \
        --username minui \
        --password "$password" \
        --sftp-username minui \
        --sftp-password "$password" \
        --directory "$SDCARD_PATH" \
        --log-file-path "$LOGS_PATH/$PAK_NAME.process.log" \
        --permissions '*' \
        --config-dir "$bindir/sftpgo" >"$LOGS_PATH/$PAK_NAME.service.txt" &) &
}

main "$@"
